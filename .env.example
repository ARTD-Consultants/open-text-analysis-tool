# Azure OpenAI Configuration
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4o-2
AZURE_OPENAI_ENDPOINT=https://your-resource.cognitiveservices.azure.com/
AZURE_OPENAI_API_KEY=your-api-key-here
AZURE_OPENAI_EMBEDDING_DEPLOYMENT_NAME=text-embedding-ada-002
AZURE_API_VERSION=2024-10-21

# For regular OpenAI fallback (optional)
OPENAI_API_KEY=your-openai-api-key-here

# Analysis Configuration (optional - these are defaults)
DEFAULT_BATCH_SIZE=15
MAX_TOKENS=4000
API_TEMPERATURE=0.5
API_RETRIES=3
API_RETRY_DELAY=5

# File Configuration (optional - these are defaults)
DEFAULT_TEXT_COLUMN=text
DEFAULT_OUTPUT_DIR=output
DEFAULT_THEME_COLUMN=theme
DEFAULT_SUMMARY_COLUMN=summary

# Theme Analysis Configuration (optional - these are defaults)
MAX_THEMES_PER_ENTRY=3
MAX_THEMES_PER_ENTRY_CONSOLIDATED=5
GLOBAL_THEME_LIMIT=10
THEME_CONFIDENCE_THRESHOLD=0.6
MAX_THEMES_IN_REPORT=10
MAX_QUOTES_PER_THEME=5
THEME_SIMILARITY_THRESHOLD=0.85
ENABLE_THEME_SIMILARITY=true
ENABLE_CACHING=true

# Theme Consolidation Configuration (optional - these are defaults)
REPRESENTATIVE_THEMES_COUNT=10
THEME_MAPPING_CHUNK_SIZE=25
CONSOLIDATION_TEMPERATURE_REPRESENTATIVE=0.3
CONSOLIDATION_TEMPERATURE_MAPPING=0.1
CONSOLIDATION_MAX_TOKENS_REPRESENTATIVE=300
CONSOLIDATION_MAX_TOKENS_MAPPING=800

# Report Configuration (optional - these are defaults)
GENERATE_THEME_REPORT=true
GENERATE_THEME_CHART=true
MAX_THEMES_IN_CHART=15

# Logging Configuration (optional - these are defaults)
LOG_LEVEL=INFO
LOG_FILE=qualitative_analysis.log